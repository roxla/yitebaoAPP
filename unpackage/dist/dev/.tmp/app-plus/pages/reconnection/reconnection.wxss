
.recomm-box{
	width: 70%;
	position: absolute;
	left: 50%;
	top: 45%;
	-webkit-transform: translate(-50%, -50%);
	    -ms-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
}
.recomm-img-box{
	width: 40%;
	height: 0px;
	padding-bottom: 40%;
	margin: 0px auto 10px;
	position: relative;
}
.recomm-img-box image{
	width: 100%;
	height: 100%;
	position: absolute;
}
.recomm-box button{
	width: 50%;
	margin: auto;
	height: 30px;
	line-height: 30px;
	font-size: 15px;
}

